{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mc.local/contracts/planner-v1.schema.json",
  "title": "PlannerContractsV1",
  "$defs": {
    "SubgoalName": {
      "type": "string",
      "enum": [
        "explore",
        "goto",
        "goto_nearest",
        "collect",
        "craft",
        "smelt",
        "deposit",
        "withdraw",
        "build_blueprint",
        "combat_engage",
        "combat_guard"
      ]
    },
    "FailureCode": {
      "type": "string",
      "enum": [
        "RESOURCE_NOT_FOUND",
        "PATHFIND_FAILED",
        "NO_TOOL_AVAILABLE",
        "INVENTORY_FULL",
        "INTERRUPTED_BY_HOSTILES",
        "PLACEMENT_FAILED",
        "STUCK_TIMEOUT",
        "DEPENDS_ON_ITEM",
        "COMBAT_LOST_TARGET",
        "BOT_DIED"
      ]
    },
    "ActionHistoryEntry": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "timestamp",
        "subgoal_name",
        "params",
        "outcome",
        "duration_ms"
      ],
      "properties": {
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "subgoal_name": {
          "$ref": "#/$defs/SubgoalName"
        },
        "params": {
          "type": "object"
        },
        "outcome": {
          "type": "string",
          "enum": ["SUCCESS", "FAILURE"]
        },
        "error_code": {
          "anyOf": [
            { "$ref": "#/$defs/FailureCode" },
            { "type": "null" }
          ]
        },
        "error_details": {
          "type": ["string", "null"]
        },
        "inventory_delta": {
          "type": "object",
          "additionalProperties": {
            "type": "integer"
          }
        },
        "health_delta": {
          "type": "number"
        },
        "duration_ms": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "Subgoal": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "params", "success_criteria"],
      "properties": {
        "name": {
          "$ref": "#/$defs/SubgoalName"
        },
        "params": {
          "type": "object"
        },
        "success_criteria": {
          "type": "object"
        },
        "role_suggestion": {
          "type": ["string", "null"]
        },
        "risk_flags": {
          "type": "array",
          "items": { "type": "string" }
        },
        "constraints": {
          "type": "object"
        }
      }
    },
    "PlannerRequestV1": {
      "type": "object",
      "additionalProperties": false,
      "required": ["bot_id", "snapshot", "history", "available_subgoals"],
      "properties": {
        "bot_id": {
          "type": "string",
          "minLength": 1
        },
        "snapshot": {
          "type": "object"
        },
        "history": {
          "type": "array",
          "maxItems": 30,
          "items": {
            "$ref": "#/$defs/ActionHistoryEntry"
          }
        },
        "available_subgoals": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/SubgoalName"
          },
          "minItems": 1
        },
        "role_hint": {
          "type": ["string", "null"]
        }
      }
    },
    "PlannerResponseV1": {
      "type": "object",
      "additionalProperties": false,
      "required": ["next_goal", "subgoals"],
      "properties": {
        "next_goal": {
          "type": "string",
          "minLength": 1
        },
        "subgoals": {
          "type": "array",
          "minItems": 1,
          "maxItems": 8,
          "items": {
            "$ref": "#/$defs/Subgoal"
          }
        },
        "role_suggestion": {
          "type": ["string", "null"]
        },
        "risk_flags": {
          "type": "array",
          "items": { "type": "string" }
        },
        "constraints": {
          "type": "object"
        }
      }
    }
  }
}
